#include<stdio.h>
#include<string.h>
char a[1005];
char b[1005];
int t[1005][1005];
int main()
{
    scanf("%s", a+1);
    scanf("%s", b+1);
    int len1 = strlen(a+1);
    int len2 = strlen(b+1);
    int i = 0;
    int j = 0;
    for(i = 1; i<=len1; i++)
    {
        for(j = 1; j<=len2; j++)
        {
            if(a[i] == b[j])
            {
                t[i][j] = t[i-1][j-1] +1;
            }
            else
            {
                t[i][j] = 0;
            }
        }
    }
    int max = 0;
    for(i = 1; i<=len1; i++)
    {
        for(j = 1; j<=len2; j++)
        {
            if(t[i][j] > max)
            {
                max = t[i][j];
            }
        }
    }
    printf("%d", max);
    return 0;
}
